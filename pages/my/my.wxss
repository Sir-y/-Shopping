/* pages/my/my.wxss */
@import "../images/font_1333864_xzddt77xp5d/iconfont.wxss";

page {
  background: #f4f4f4;
  height: 100%;
}

.my-top {
  width: 100%;
  height: 280rpx;
  background: #333;
  display: flex;
  padding: 0 30rpx;
  align-items: center;
}

.my-top image {
  height: 148rpx;
  width: 148rpx;
  border-radius: 50%;
}

.my-tt {
  color: #fff;
  margin-left: 30rpx;
}

.my-tt view {
  color: #fff;
  font-size: 30rpx;
  margin-bottom: 10rpx;
}

.my-b {
  width: 100%;
  display: flex;
  flex-wrap: wrap;
  background: white;
}

.my-b .my-bbox {
  width: calc(99.4% / 3);
  border-right: 1rpx solid rgba(0, 0, 0, 0.15);
  border-bottom: 1rpx solid rgba(0, 0, 0, 0.15);
  text-align: center;
  padding: 50rpx 0;
  
}

.my-b .my-bbox:nth-child(3n) {
  border-right: none;
}
.my-b .my-bbox:nth-of-type(7),.my-b .my-bbox:nth-of-type(8){
  border-bottom: none;
}
.my-b .my-bbox label{
  margin-bottom: 10rpx;
}
