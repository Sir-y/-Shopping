/* pages/cart/cart.wxss */

page {
  background: #f4f4f4;
  height: 100%;
}

.cart-top {
  display: flex;
  justify-content: space-between;
  padding: 30rpx 20rpx;
}

.cart-tbox {
  display: flex;
  justify-content: center;
  align-items: center;
}

.cart-tbox .cart-tdot {
  width: 8rpx;
  height: 8rpx;
  display: inline-block;
  border-radius: 50%;
  border: 1rpx solid #000;
  margin-right: 5rpx;
}

.cart-tbox text {
  font-size: 25rpx;
  color: #666;
}

.cart-center {
  width: 100%;
  overflow: hidden;
  display: flex;
  flex-direction: column;
  padding-bottom: 120rpx;
}

.cart-cbox {
  display: flex;
  background: white;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f4f4f4;
  height: 166rpx;
  position: relative;
}
.cart-c{
  width: 100%;
   display: flex;
   justify-content: center;
   align-items: center;
   transition: all 300ms ease;
   

}

.cart-bdot1 {
  height: 125rpx;
width: 40rpx;
  display: inline-block;

  margin: 0 20rpx;
  background: url(http://nos.netease.com/mailpub/hxm/yanxuan-wap/p/20150730/style/img/icon-normal/checkbox-0e09baa37e.png) no-repeat center center;
  background-size: 34rpx 34rpx;
}
.cart-bdot2 {
   height: 125rpx;
width: 40rpx;
  display: inline-block;
background: url(http://nos.netease.com/mailpub/hxm/yanxuan-wap/p/20150730/style/img/icon-normal/checkbox-checked-822e54472a.png) no-repeat center center;
background-size: 34rpx 34rpx;
  margin: 0 20rpx;
} 

.cart-c image {
  height: 125rpx;
  width: 125rpx;
  display: block;
  background: #f4f4f4;
}

.cart-ctext {
  width: 60%;
  padding: 20rpx;
}

.cart-ctext view {
  line-height: 40rpx;
  font-size: 28rpx;
  color: #333;
}

.cart-cshan {
  position: absolute;
  top: 0;
  right: -100rpx;
  font-size: 28rpx;
  color: #fff;
  width: 100rpx;
  text-align: center;
  height: 100%;
  background: #b4282d;
  
  display: flex;
  align-items: center;
  justify-content: center;
}

.cart-cright {
  flex: 1;
  text-align: right;
  padding-right: 50rpx;
}

.cart-b {
  height: 100rpx;
  line-height: 100rpx;
  width: 100%;
  background: #fff;
  display: flex;
  position: fixed;
  bottom: 0;
  left: 0;
}

.cart-bleft {
  display: flex;
  align-items: center;
}

.cart-bdot {
  display: inline-block;
  margin: 0 20rpx;
}

.cart-bleft .cart-btext {
  display: inline-block;
}

.cart-bm {
  flex: 1;
  display: flex;
  justify-content: flex-end;
}

.cart-bmone {
  color: #b4282d;
  padding-right: 40rpx;
  font-size: 28rpx;
}

.cart-bmo {
  width: 200rpx;
  height: 100rpx;
  text-align: center;
  line-height: 100rpx;
  font-size: 29rpx;
  background: #b4282d;
  color: #fff;
}

/*未选择*/

checkbox .wx-checkbox-input {
  border-radius: 50%; /* 圆角 */
  width: 40rpx; /* 背景的宽 */
  height: 40rpx; /* 背景的高 */
}

/*选中*/

checkbox .wx-checkbox-input.wx-checkbox-input-checked {
  /* border: none; */
  background: green;
}

/* 选中后的 对勾样式 （白色对勾 可根据UI需求自己修改） */

checkbox .wx-checkbox-input.wx-checkbox-input-checked::before {
  border-radius: 50%; /* 圆角 */
  width: 40rpx; /* 选中后对勾大小，不要超过背景的尺寸 */
  height: 40rpx; /* 选中后对勾大小，不要超过背景的尺寸 */
  line-height: 40rpx;
  text-align: center;
  font-size: 20rpx; /* 对勾大小 30rpx */
  color: #fff; /* 对勾颜色 白色 */
  background: transparent;
  transform: translate(-50%, -50%) scale(1);
  -webkit-transform: translate(-50%, -50%) scale(1);
}
